<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ejercicio2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ViewHoras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="Elecciones de Alcaldes 2022"
                android:textStyle="bold"
                android:textColor="@color/custom"
                android:textSize="19dp" />
            <TextView
                android:id="@+id/ViewCan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="#1 : Jose Calderon"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/ViewCan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="#2 : Esther Rodriguez"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/ViewCan3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="#3: Miguel Chiquillo"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/ViewCan4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="#4 : Fernanda Perez"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/NumVotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:hint="Ingrese el numero del candidato a votar(1,1,2,3)"
                android:inputType="textPersonName"
                android:textColorHint="@color/custom"
                android:textSize="15dp" />

            <Button
                android:id="@+id/BtnCalcular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_margin="15dp"
                android:backgroundTint="@color/custom2"
                android:text="Calcular" />

            <TextView
                android:id="@+id/ViewDatos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:textSize="15dp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>